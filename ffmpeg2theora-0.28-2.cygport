DESCRIPTION="Converts videos to Ogg Theora format"
HOMEPAGE="http://v2v.cc/~j/ffmpeg2theora/"
SRC_URI="http://v2v.cc/~j/ffmpeg2theora/downloads/${P}.tar.bz2"
PATCH_URI="mirror://portage/media-video/${PN}/files/${P}-ffmpeg-0.10.patch"

src_compile() {
	lndirs
	cd ${B}
	scons || error "Scons compile failed"
}

src_install() {
	cd ${B}
	dobin ${PN}.exe
	doman ${PN}.1
}
